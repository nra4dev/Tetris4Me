<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.nrasoft.androidapp"
    android:versionCode="14"
    android:versionName="1.8.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <supports-screens android:normalScreens="true" android:smallScreens="true" android:largeScreens="true" android:resizeable="true" android:anyDensity="true" android:xlargeScreens="true"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/mytetris"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light">
        <activity
            android:name="org.nrasoft.androidapp.mytetris.uc.main.MainActivity"
            android:configChanges="orientation|screenLayout|screenSize"
            android:icon="@drawable/mytetris"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.nrasoft.androidapp.mytetris.uc.game.GameActivity"
            android:label="@string/title_activity_game"
            android:theme="@android:style/Theme.Holo.Light">
        </activity>
        <activity
            android:name="org.nrasoft.androidapp.mytetris.uc.settings.SettingsActivity"
            android:icon="@drawable/ic_settings"
            android:label="@string/title_activity_settings"
            android:theme="@android:style/Theme.Holo.Light">
        </activity>
        <activity
            android:name="org.nrasoft.androidapp.mytetris.uc.settings.AdvancedSettingsActivity"
            android:icon="@drawable/ic_settings"
            android:label="@string/pref_category_advanced" >
        </activity>
        <activity
            android:name="org.nrasoft.androidapp.mytetris.uc.about.AboutActivity"
            android:icon="@drawable/mytetris"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="org.nrasoft.androidapp.mytetris.uc.help.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>

    </application>

</manifest>
